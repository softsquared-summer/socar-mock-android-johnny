<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#60FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.PickerTime" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--To remove divider of the number picker-->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.PickerDate" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--To remove divider of the number picker-->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
